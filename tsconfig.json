{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "es2017"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@_android": ["android/*"],
      "@_assets/*": ["src/assets/*"],
      "@_axios/*": ["src/axios/*"],
      "@_components/*": ["src/components/*"],
      "@_hooks/*": ["src/hooks/*"],
      "@_images/*": ["src/images/*"],
      "@_layouts/*": ["src/layouts/*"],
      "@_screens/*": ["src/screens/*"],
      "@_services/*": ["src/services/*"],
      "@_styles/*": ["src/styles/*"],
      "@_types/*": ["src/types/*"],
      "@_utils/*": ["src/utils/*"],
      "@_zustand/*": ["src/zustand/*"]
    }
  },
  "extends": "@tsconfig/react-native/tsconfig.json"
}
